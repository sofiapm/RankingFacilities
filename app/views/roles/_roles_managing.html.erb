      <div class="row bottom-border">
      	      <%= link_to 'Add', new_role_path, class: "ls-btn-primary ls-no-radius ls-ico-plus pull-right white-color-font roles" %>
      	      <h2 class="pull-left titulo-roles">Roles</h2>
      </div>
      <div class="roles-list">
	    <% current_user.roles.each do |r| %>
	        <div class="ls-list ls-no-radius">
			    <header class="ls-list-header">
			      <div class="ls-list-title col-md-4">
			        <big class="titulo-azul"><%= r.company_name %></big>
			        <small><%= r.name %></small>
			      </div>
			      <div class="col-md-3 col-md-offset-5 ls-txt-right">
			        
			        <%= link_to "Manage", {:controller => "/user_roles", :current_role => r.id, :action => 'update', :method => :put, :approved => true}, {class: "ls-btn-primary ls-btn-sm ls-no-radius white-color-font"} %>
			        	<!-- <a >Administrar</a> -->
			        
			        <%= link_to 'Delete', r, class: "ls-btn-primary ls-btn-sm ls-no-radius white-color-font", method: :delete, data: { confirm: 'Are you sure?' } %>
			      </div>
			    </header>
			  </div>         
		    
		<% end %>
	</div>