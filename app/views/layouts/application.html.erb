<!DOCTYPE html>
<html>
	<head>
	  <title>UpRanking</title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body data-spy="scroll" data-target=".bs-docs-sidebar" data-twttr-rendered="true">

		<div class="row">
			<% if user_signed_in? %>
				<%= render 'layouts/navbar' %>	
			    <%= render 'layouts/navbarVertical' %>	
			    <div class="container-fluid col-md-9 col-md-offset-3 body-container">

			        <p class="notice"><%= notice %></p>
			        <p class="alert"><%= alert %></p>

			        <%= yield %>
			    </div>
			 <% else %>
			   	<%= render 'layouts/navbar' %>	
			    <%= yield %>
			<% end %>
			
		</div>
		
		<div class="row">
	         <div class="container marketing">
	         	 <footer> 
	    	      	<hr class="featurette-divider">
	    	        <p class="pull-right"><a class="btn-link" href="#">Back to top</a></p>
	    	        <p>© 2014 Company, Inc. · <a class="btn-link" href="#">Privacy</a> · <a class="btn-link" href="#">Terms</a></p>
	    	      </footer>
	    	 </div>
    	 </div>
	</body>
</html>
