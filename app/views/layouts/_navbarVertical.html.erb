	<div class="container-fluid col-md-3 vertical-bar affix">
        <div class="marketing"> 

                <ul class="nav nav-list bs-docs-sidenav" role="tablist">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#myModal">
                            <% if current_user.current_role != 0 %>
                                <%= current_user.roles.find(current_user.current_role).name + ": " +  current_user.roles.find(current_user.current_role).company_name %> 
                            <% else %>
                                <%= "Role Not Selected" %>
                            <% end %> 
                        <span class="caret"></span></a>
                        <ul class="dropdown-menu pull-right" role="menu">
                            <% current_user.roles.each do |r| %>
                                   
                                   <li><%= link_to r.name, :controller => "/user_roles", :current_role => r.id, :action => 'update', :method => :put, :approved => true %></li>
                            <% end %>
                            <li class="divider"></li>
                            <li><%= link_to "Edit Roles", roles_path %></li>
                            <li class="divider"></li>
                            <li><%= link_to "Add Roles", new_role_path %></li>
                        </ul>
                    </li>   
                </ul> 
                
            <hr class="featurette-divider">     
            <ul class="nav nav-list bs-docs-sidenav">
                <% if current_user.current_role != 0 %> 
                    <% current_user.roles.find(current_user.current_role).facilities.each do |f| %>
                                       
                        <li><%= link_to f.name, edit_facility_path(f.id) %></li>
                    <% end %>
                <% else %>
                    <%= "There are no Facilities created." %>
                <% end %>
                <hr class="featurette-divider"> 
                <% if current_user.current_role != 0 %>
                    <li><%= link_to "+ Add Facility", new_role_facility_path(current_user.current_role) %></li>
                <% else %>
                    <li><%= link_to "+ Add Facility", static_pages_error_role_empty_page_path %></li>
                <% end %>
            </ul>

        </div>
    </div>