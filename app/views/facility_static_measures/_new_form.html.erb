
<%= form_for [@facility, @facility_static_measure] do |f| %>
  <% if @facility_static_measure.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@facility_static_measure.errors.count, "error") %> prohibited this measure from being saved:</h2>

      <ul>
      <% @facility_static_measure.errors.full_messages.each do |message| %>
