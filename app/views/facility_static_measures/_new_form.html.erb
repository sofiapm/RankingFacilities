      <% end %>
      </ul>
    </div>
  <% end %>


  <td><%= f.select :name, RankingFacilities::Application::ATTRIBUTES_NAMES.inject([]){|acum, (key, value) | acum << value } , {} ,:required => true, class: "form-control" %></td>
