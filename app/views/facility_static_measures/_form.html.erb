      <% if @action[:action] == 'new' %>
        <td><%= link_to 'Static Metrics List', facility_facility_static_measures_path(@facility), class: "ls-btn ls-no-radius" %></td>
      <% else %>
        <td><%= link_to 'Static Metrics List', facility_facility_static_measures_path(@facility_static_measure.facility_id), class: "ls-btn ls-no-radius" %></td>
      <% end %>
    </div> -->
    <div class="pull-right">
      <%= f.submit "Save", class: "ls-btn ls-no-radius"  %>
    </div>
    </fieldset>
  <% end %>
