              </header>
               
                <div class="form_fancy"><%= a.label :name %><br /><%= a.select :name, RankingFacilities::Application::ROLES_NAMES.inject([]){|acum, (key, value) | acum << value } ,{} ,:required => true, class: "form-control" %></div>
