
  <h1 class="ls-title-intro ls-ico-user">Edit <%= resource_name.to_s.humanize %> Account</h1>

  <div class="row">
    <div class="col-xs-12 col-md-8">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "ls-box ls-board-box"  }) do |f| %>
       
        <header class="ls-info-header">
          <h2 class="ls-title-3">User Details</h2>
        </header>
        <%= devise_error_messages! %>
        <fieldset>
            <div class="form_fancy"><%= f.label :first_name %><br />
            <%= f.text_field :first_name, :required => true, class: "form-control" %></div>

            <div class="form_fancy"><%= f.label :last_name %><br />
            <%= f.text_field :last_name, :required => true, class: "form-control" %></div>

            <div id="" class="form_fancy">
              <%= "Address" %><br />
              <input id="autocomplete" onfocus="geolocate()" type="text" class="form-control"></input>
            </div>
            <%= f.fields_for :address do |a| %>
                <div class="form_fancy"><%= a.label :street %><br />
                <%= a.text_field :street, :required => true, class: "form-control", id: "route" %></div>
                <div class="form_fancy"><%= a.label :city %><br />
                <%= a.text_field :city, :required => true, class: "form-control", id: "locality" %></div>
                <div class="form_fancy"><%= a.label :country %><br />
                <%= a.text_field :country, :required => true, class: "form-control", id: "country" %></div>
                <div class="form_fancy"><%= a.label :zip_code %><br />
                <%= a.text_field :zip_code, :required => true, class: "form-control", id: "postal_code" %></div>
            <% end %>

            <div class="form_fancy" ><%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, class: "form-control" %></div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form_fancy"><%= f.label :current_password %> <i>(REQUIRED)</i><br />
              <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %></div>
              
            <div class="form_fancy"><%= f.label :password %> <i>(ONLY if you want to change password)</i><br />
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %></div>

            <div class="form_fancy"><%= f.label :password_confirmation %><i>(ONLY if you want to change password)</i><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %></div><br /><br />

          

